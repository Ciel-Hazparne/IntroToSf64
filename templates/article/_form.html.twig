{{ form_start(form) }}
<div class="row">
    <div class="col-md-10">{{ form_row(form.name) }}</div>
</div>
<div class="row">
    <div class="col-md-10">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col-md-10">{{ form_row(form.category) }}</div>
</div>
