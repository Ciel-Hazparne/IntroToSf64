{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    {{ knp_pagination_sortable(articles, 'Nom', 'Name') }}
                    {% if articles.isSorted('Name') %}
                        <i class="fa fa-sort-{{ articles.direction == 'asc' ? 'up' : 'down' }}"></i>
                    {% endif %}
                </th>
                <th>
                    {{ knp_pagination_sortable(articles, 'Prix', 'Price') }}
                    {% if articles.isSorted('Price') %}
                        <i class="fa fa-sort-{{ articles.direction == 'asc' ? 'up' : 'down' }}"></i>
                    {% endif %}
                </th>
                <th>
                    {{ knp_pagination_sortable(articles, 'Catégorie', 'Category') }}
                    {% if articles.isSorted('Category') %}
                        <i class="fa fa-sort-{{ articles.direction == 'asc' ? 'up' : 'down' }}"></i>
                    {% endif %}
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.name }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.category.title }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-info">Détails</a>
                    {% if is_granted('ROLE_EDITOR') %}
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun article n'a été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_EDITOR') %}
    <a href="{{ path('article_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Ajouter un article</a>
    {% endif %}
    {# Liens de pagination #}
    <div class="pagination">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
